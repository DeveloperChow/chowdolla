<!DOCTYPE html>
<html lang="en">
<head>
<meta charset="UTF-8">
<meta name="viewport" content="width=device-width, initial-scale=1, viewport-fit=cover">
<title>ChowDolla</title>

<style>
*{margin:0;padding:0;box-sizing:border-box;font-family:-apple-system,system-ui}
html,body{height:100%;background:#0b0e14;color:#fff;overflow:hidden}

:root{
 --glass:rgba(255,255,255,.16);
 --soft:rgba(255,255,255,.08);
 --blur:blur(26px);
 --radius:22px;
}

.app{height:100%;width:100%;position:relative}

/* LOGIN */
#login{
 position:absolute;inset:0;
 display:flex;align-items:center;justify-content:center;
 background:linear-gradient(135deg,#1e2340,#0b0e14,#120018);
}
.login-card{
 width:92%;max-width:360px;
 padding:26px;
 border-radius:28px;
 background:linear-gradient(135deg,rgba(255,255,255,.22),rgba(255,255,255,.06));
 backdrop-filter:blur(32px);
 box-shadow:0 40px 120px rgba(0,0,0,.8);
}
.avatar{
 width:76px;height:76px;border-radius:50%;
 background:rgba(255,255,255,.25);
 margin:0 auto 22px;
}
.field{margin-bottom:16px}
.field input{
 width:100%;
 background:none;
 border:none;
 border-bottom:1px solid rgba(255,255,255,.5);
 padding:10px 6px;
 color:#fff;
 font-size:16px;
 outline:none;
}
.login-btn{
 width:100%;
 padding:14px;
 border:none;
 border-radius:16px;
 background:linear-gradient(90deg,#6a5cff,#3aa3ff);
 color:#fff;
 font-size:16px;
}

/* MAIN */
#main{display:none;position:absolute;inset:0}

.header{
 padding:18px;
 display:flex;
 justify-content:space-between;
 align-items:center;
}
.brand{
 display:flex;gap:10px;align-items:center
}
.logo{
 width:36px;height:36px;border-radius:50%;
 background:#5c7cff;
 display:flex;align-items:center;justify-content:center;
 font-weight:600
}
.plus{
 width:38px;height:38px;border-radius:50%;
 background:var(--glass);
 backdrop-filter:var(--blur);
 display:flex;align-items:center;justify-content:center;
 font-size:22px;
}

.content{
 padding:16px;
 height:calc(100% - 160px);
}

.card{
 background:var(--glass);
 backdrop-filter:var(--blur);
 border-radius:var(--radius);
 padding:18px;
 margin-bottom:16px;
}

.balance-label{color:rgba(255,255,255,.6)}
.balance{
 font-size:36px;
 font-weight:600;
 margin-top:4px;
}

.tap{
 width:100%;
 padding:18px;
 margin-top:14px;
 border:none;
 border-radius:20px;
 background:linear-gradient(180deg,rgba(255,255,255,.35),rgba(255,255,255,.08));
 color:#fff;
 font-size:18px;
}

.grid{
 display:grid;
 grid-template-columns:repeat(3,1fr);
 gap:12px;
 margin-top:14px;
}
.reward{
 padding:14px;
 border-radius:16px;
 background:var(--soft);
 backdrop-filter:var(--blur);
 text-align:center;
}

/* NAV */
.nav{
 position:absolute;
 bottom:0;
 width:100%;
 padding:14px;
}
.nav-inner{
 display:flex;
 justify-content:space-around;
 background:var(--glass);
 backdrop-filter:var(--blur);
 border-radius:28px;
 padding:10px;
}
.nav button{
 background:none;border:none;
 color:rgba(255,255,255,.55);
 font-size:14px;
}
.nav button.active{color:#fff}
</style>
</head>

<body>
<div class="app">

<!-- LOGIN -->
<div id="login">
 <div class="login-card">
  <div class="avatar"></div>
  <div class="field"><input id="username" placeholder="Email"></div>
  <div class="field"><input type="password" placeholder="Password"></div>
  <button class="login-btn" onclick="login()">LOGIN</button>
 </div>
</div>

<!-- MAIN -->
<div id="main">
 <div class="header">
  <div class="brand">
   <div class="logo">CD</div>
   <div>
    <div>ChowDolla</div>
    <div style="font-size:12px;color:rgba(255,255,255,.6)">FAKE MONEY GAME</div>
   </div>
  </div>
  <div class="plus" onclick="adminAdd()">+</div>
 </div>

 <div class="content" id="screen"></div>

 <div class="nav">
  <div class="nav-inner">
   <button onclick="go('home')" class="active">Home</button>
   <button onclick="go('pay')">Pay</button>
   <button onclick="go('jobs')">Jobs</button>
   <button onclick="go('assets')">Assets</button>
   <button onclick="go('me')">Me</button>
  </div>
 </div>
</div>

</div>

<script>
let balance=0

function login(){
 document.getElementById('login').style.display='none'
 document.getElementById('main').style.display='block'
 go('home')
}

function adminAdd(){
 balance+=100
 renderHome()
}

function go(tab){
 document.querySelectorAll('.nav button').forEach(b=>b.classList.remove('active'))
 document.querySelectorAll('.nav button')[['home','pay','jobs','assets','me'].indexOf(tab)].classList.add('active')
 if(tab==='home')renderHome()
 else document.getElementById('screen').innerHTML=
  `<div class="card">${tab.toUpperCase()} SCREEN – READY</div>`
}

function renderHome(){
 document.getElementById('screen').innerHTML=`
 <div class="card">
  <div class="balance-label">Balance</div>
  <div class="balance">£${balance.toFixed(2)}</div>
  <button class="tap" onclick="balance+=0.05;renderHome()">TAP +£0.05</button>
  <div class="grid">
   <div class="reward" onclick="balance+=2;renderHome()">+£2<br><small>10m</small></div>
   <div class="reward" onclick="balance+=5;renderHome()">+£5<br><small>30m</small></div>
   <div class="reward" onclick="balance+=10;renderHome()">+£10<br><small>1h</small></div>
   <div class="reward" onclick="balance+=20;renderHome()">+£20<br><small>2h</small></div>
   <div class="reward" onclick="balance+=50;renderHome()">+£50<br><small>6h</small></div>
   <div class="reward" onclick="balance+=100;renderHome()">+£100<br><small>12h</small></div>
  </div>
 </div>`
}
</script>

</body>
</html>
